<?xml version="1.0" encoding="UTF-8"?>
<query>
	
	<member>
	
		<getMemberByIdAndPassword>
			SELECT	MEMBER_ID
					, NICK_NAME
					, PASSWORD
					, EMAIL
			FROM	MEMBERS
			WHERE	MEMBER_ID = ?
			AND		PASSWORD = ?
		</getMemberByIdAndPassword>
	
	</member>
	
	<article>
		<getAllArticle>
			SELECT	ARTICLE_ID
					, TITLE
					, NICK_NAME
					, HITS
					, RECOMMENDS
			FROM	ARTICLE A
					, MEMBERS M
			WHERE	A.MEMBER_ID = M.MEMBER_ID
		</getAllArticle>
		
		<getOneArticleByArticleId>
			SELECT	ARTICLE_ID
					, TITLE
					, NICK_NAME
					, A.MEMBER_ID
					, DESCRIPT
					, HITS
					, RECOMMENDS
			FROM	ARTICLE A
					, MEMBERS M
			WHERE	A.MEMBER_ID = M.MEMBER_ID
			AND     A.ARTICLE_ID = ?
		</getOneArticleByArticleId>
	</article>
	
</query>