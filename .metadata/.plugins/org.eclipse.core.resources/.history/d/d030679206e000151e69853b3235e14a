<script> 
$(document).ready(function(){
    $("#addNewActor").click(function(){
        $("div").animate({
            height: 'toggle'
        });
    });
});

$(document).ready(function(){
    $("#addNewMovie").click(function(){
        var div = $("div");  
        div.animate({left: '100px'}, "slow");
        div.animate({fontSize: '3em'}, "slow");
    });
});

</script> 
