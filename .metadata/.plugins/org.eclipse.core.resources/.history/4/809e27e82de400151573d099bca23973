<?xml version="1.0" encoding="UTF-8"?>
<query>
	
	<member>
	
		<getMemberByIdAndPassword>
			SELECT	MEMBER_ID
					, NICK_NAME
					, PASSWORD
					, EMAIL
			FROM	MEMBERS
			WHERE	MEMBER_ID = ?
			AND		PASSWORD = ?
		</getMemberByIdAndPassword>
	
	</member>
	
	<article>
		<getArticleByMemberId>
			SELECT	ARTICLE_ID
					, MEMBER_ID
					, TITLE
					, DESCRIPT
					, HITS
					, RECOMMENDS
			FROM	ARTICLE
			WHERE   MEMBER_ID = '?';
		</getArticleByMemberId>
	</article>
	
</query>